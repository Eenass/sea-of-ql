package org.uva.sea.ql.parser.test.syntax;

import static org.junit.Assert.assertEquals;

import org.junit.Test;
import org.uva.sea.ql.ast.expression.Add;
import org.uva.sea.ql.ast.expression.And;
import org.uva.sea.ql.ast.expression.Eq;
import org.uva.sea.ql.ast.expression.GEq;
import org.uva.sea.ql.ast.expression.GT;
import org.uva.sea.ql.ast.expression.Ident;
import org.uva.sea.ql.ast.expression.Int;
import org.uva.sea.ql.ast.expression.LEq;
import org.uva.sea.ql.ast.expression.LT;
import org.uva.sea.ql.ast.expression.Mul;
import org.uva.sea.ql.ast.expression.Not;
import org.uva.sea.ql.parser.test.ParseError;

public class ExpressionTest extends SyntaxTest {

	@Override
	protected Class<?> getClass(String src) {
		return getParser().parseExpression(src).getClass();
	}
	
	@Test
	public void testAdds() throws ParseError {
		assertEquals(getClass("a + b"), Add.class);
		assertEquals(getClass("a + b + c"), Add.class);
		assertEquals(getClass("(a + b + c)"), Add.class);
		assertEquals(getClass("a + (b + c)"), Add.class);
		assertEquals(getClass("(a + b) + c"), Add.class);
		assertEquals(getClass("(a + b)"), Add.class);
		assertEquals(getClass("a + b * c"), Add.class);
		assertEquals(getClass("a * b + c"), Add.class);
	}

	@Test
	public void testMuls() throws ParseError {
		assertEquals(getClass("a * b"), Mul.class);
		assertEquals(getClass("a * b * c"), Mul.class);
		assertEquals(getClass("a * (b * c)"), Mul.class);
		assertEquals(getClass("(a * b) * c"), Mul.class);
		assertEquals(getClass("(a * b)"), Mul.class);
		assertEquals(getClass("(a + b) * c"), Mul.class);
		assertEquals(getClass("a * (b + c)"), Mul.class);
	}

	@Test
	public void testRels() throws ParseError {
		assertEquals(getClass("a < b"), LT.class);
		assertEquals(getClass("a < b + c"), LT.class);
		assertEquals(getClass("a < (b * c)"), LT.class);
		assertEquals(getClass("(a * b) < c"), LT.class);
		
		assertEquals(getClass("(a <= b)"), LEq.class);
		assertEquals(getClass("(a + b <= b)"), LEq.class);
		assertEquals(getClass("(a <= b * c)"), LEq.class);
		assertEquals(getClass("(a - b * c <= b)"), LEq.class);
		assertEquals(getClass("(a <= b)"), LEq.class);
		
		assertEquals(getClass("a + b == c"), Eq.class);
		assertEquals(getClass("a == b + c"), Eq.class);
		assertEquals(getClass("a + b == c"), Eq.class);
		assertEquals(getClass("a == b + c"), Eq.class);
		
		assertEquals(getClass("(a >= b)"), GEq.class);
		assertEquals(getClass("(a + b >= b)"), GEq.class);
		assertEquals(getClass("(a >= b * c)"), GEq.class);
		assertEquals(getClass("(a - b * c >= b)"), GEq.class);
		assertEquals(getClass("(a >= b)"), GEq.class);
		
		assertEquals(getClass("a + b > c"), GT.class);
		assertEquals(getClass("a > b + c"), GT.class);
		assertEquals(getClass("a + b > c"), GT.class);
		assertEquals(getClass("a > b + c"), GT.class);
	}

	@Test
	public void testBools() throws ParseError {
		assertEquals(getClass("!b"), Not.class);
		assertEquals(getClass("!(a == b)"), Not.class);
		assertEquals(getClass("!(b && c)"), Not.class);
		assertEquals(getClass("!(d == (e && f) || g)"), Not.class);
		
		assertEquals(getClass("a && b"), And.class);
		assertEquals(getClass("a > b && b > c"), And.class);
		assertEquals(getClass("(a > b) && (b > c)"), And.class);
	}

	@Test
	public void testIds() throws ParseError {
		assertEquals(getClass("a"), Ident.class);
		assertEquals(getClass("abc"), Ident.class);
		assertEquals(getClass("ABC"), Ident.class);
		assertEquals(getClass("ABCDEF"), Ident.class);
		assertEquals(getClass("abc2323"), Ident.class);
		assertEquals(getClass("a2bc232"), Ident.class);
		assertEquals(getClass("a2bc232aa"), Ident.class);
	}

	@Test
	public void testNums() throws ParseError {
		assertEquals(getClass("0"), Int.class);
		assertEquals(getClass("00000000000000"), Int.class);
		assertEquals(getClass("1223"), Int.class);
		assertEquals(getClass("234234234"), Int.class);
		assertEquals(getClass("000000003"), Int.class);
	}

}
