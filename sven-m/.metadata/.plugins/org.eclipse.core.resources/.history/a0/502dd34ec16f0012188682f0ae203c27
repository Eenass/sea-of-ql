package org.uva.sea.ql.ast.form;

import org.uva.sea.ql.ast.expression.Ident;
import org.uva.sea.ql.ast.type.ExprType;
import org.uva.sea.ql.visitors.FormElementTypeChecker;

public class Question extends FormElement {
	private final Ident name;
	private final String label;
	private final ExprType type;

	public Question(Ident name, String label, ExprType type) {
		this.name = name;
		this.label = label;
		this.type = type;
	}
	
	public Ident getName() {
		return name;
	}
	
	public String getLabel() {
		return label;
	}
	
	public ExprType getType() {
		return type;
	}
	
	public void accept(FormElementTypeChecker visitor) {
		visitor.visit(this);
	}
	
}
