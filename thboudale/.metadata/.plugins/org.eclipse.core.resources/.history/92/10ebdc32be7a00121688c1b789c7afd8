package org.uva.sea.ql.parser.test;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.junit.Test;
import static org.junit.Assert.assertEquals;
import org.uva.sea.ql.visitor.ExprChecker;
import org.uva.sea.ql.ast.expressions.Ident;
import org.uva.sea.ql.ast.expressions.Int;
import org.uva.sea.ql.ast.expressions.Str;
import org.uva.sea.ql.ast.expressions.binaryExpr.Add;
import org.uva.sea.ql.ast.types.Type;

public class TestExprChecking {
	private ExprChecker exprVisitor;
	private Map<Ident,Type> typeEnv;
	private List<String> errMsgs;
	
	public TestExprChecking() {
		typeEnv = new HashMap<Ident, Type>();
		errMsgs = new ArrayList<String>();
		exprVisitor = new ExprChecker(typeEnv, errMsgs);
	}
	
	@Test
	public void testExprChecking() {
		assertEquals(true, exprVisitor.visit(new Add(new Int(10), new Int(25))));
	}
}