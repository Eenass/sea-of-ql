package org.uva.sea.ql.ast.statements;

import org.uva.sea.ql.ast.expressions.AExpr;
import org.uva.sea.ql.ast.expressions.Ident;
import org.uva.sea.ql.ast.expressions.values.Str;
import org.uva.sea.ql.ast.types.Type;
import org.uva.sea.ql.visitor.FrmStmtVisitor;

public class ComputedQuestion extends Question {
	private final AExpr orExpr;

	public ComputedQuestion(Ident ident, Str strLtr, Type type, AExpr orExpr) {
		super(ident, strLtr, type);
		this.orExpr = orExpr;
	}
		
	public Expr getExpr() {
		return orExpr;
	}
	
	@Override
	public <T> T accept(FrmStmtVisitor<T> visitor) {
		return visitor.visit(this);		
	}
}