package org.uva.sea.ql.parser.test;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import org.junit.Test;
import static org.junit.Assert.assertEquals;
import org.uva.sea.ql.parser.antlr.ANTLRParser;
import org.uva.sea.ql.visitor.ExprChecker;
import org.uva.sea.ql.ast.expressions.Ident;
import org.uva.sea.ql.ast.types.Type;

public class TestExprChecking {
	private ANTLRParser parser;
	private ExprChecker exprChecker;
	private Map<Ident,Type> typeEnv;
	private List<String> errMsgs;
	
	public TestExprChecking() {
		parser = new ANTLRParser();
		typeEnv = new HashMap<Ident, Type>();
		errMsgs = new ArrayList<String>();
		exprChecker = new ExprChecker(typeEnv, errMsgs);
	}
	
	@Test
	public void testExprChecking() throws ParseError {
		assertTrue(exprChecker.check(parser.parseExpr("10-25"), typeEnv, errMsgs));
		assertEquals(true, exprChecker.check(parser.parseExpr("true || false"), typeEnv, errMsgs));
		assertEquals(true, exprChecker.check(parser.parseExpr("23 >= 56"), typeEnv, errMsgs));
		assertEquals(true, exprChecker.check(parser.parseExpr("25+56*(3/1)"), typeEnv, errMsgs));
		assertEquals(true, exprChecker.check(parser.parseExpr("\"abc\"==\"abc\""), typeEnv, errMsgs));
		assertEquals(false, exprChecker.check(parser.parseExpr("10-true"), typeEnv, errMsgs));
		assertEquals(false, exprChecker.check(parser.parseExpr("true || 20"), typeEnv, errMsgs));
		assertEquals(false, exprChecker.check(parser.parseExpr("\"abc\" + 56"), typeEnv, errMsgs));
	}
}